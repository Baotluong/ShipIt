@model IEnumerable<ShipIt.Models.Bet>

@{
    ViewBag.Title = "My Bets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bets</h2>

<table id="bets" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Bet</th>
            <th>Bettor 1</th>
            <th>Bettor 1 Win Condition</th>
            <th>Bettor 2</th>
            <th>Bettor 2 Win Condition</th>
            <th>Wager</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

