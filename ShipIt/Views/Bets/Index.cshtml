                    {
                        data: "BetPremise",
                        render: function (data, type, bet) {
                            return "<a href='/bets/edit/" + bet.id + "'>" + bet + "</a>";
                        }
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
